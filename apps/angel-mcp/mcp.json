// This is a config file for MCP server with relative paths and minimal environment variables.
{
  "mcpServers": {
    "angel-one-mcp": {
      "command": "bash",
      "args": ["-lc", "uv run python -m server"],
      "env": {
        "ANGEL_MODE": "PAPER",
        "DRY_RUN_MODE": "true"
      }
    }
  }
}

